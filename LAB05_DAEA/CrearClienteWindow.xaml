<Window x:Class="LAB05_DAEA.CrearClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB05_DAEA"
        mc:Ignorable="d"
        Title="CrearClienteWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CONTENIDO CON SCROLL -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top">
                <!-- Elimina el campo ID, ya que ahora se genera automáticamente -->

                <TextBlock Text="Nombre Compañía"/>
                <TextBox x:Name="txtNombreCompañia" Margin="0,5"/>
                <TextBlock Text="Nombre Contacto"/>
                <TextBox x:Name="txtNombreContacto" Margin="0,5"/>
                <TextBlock Text="Cargo Contacto"/>
                <TextBox x:Name="txtCargoContacto" Margin="0,5"/>
                <TextBlock Text="Dirección"/>
                <TextBox x:Name="txtDireccion" Margin="0,5"/>
                <TextBlock Text="Ciudad"/>
                <TextBox x:Name="txtCiudad" Margin="0,5"/>
                <TextBlock Text="Región"/>
                <TextBox x:Name="txtRegion" Margin="0,5"/>
                <TextBlock Text="Código Postal"/>
                <TextBox x:Name="txtCodPostal" Margin="0,5"/>
                <TextBlock Text="País"/>
                <TextBox x:Name="txtPais" Margin="0,5"/>
                <TextBlock Text="Teléfono"/>
                <TextBox x:Name="txtTelefono" Margin="0,5"/>
                <TextBlock Text="Fax"/>
                <TextBox x:Name="txtFax" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botón inferior fijo -->
        <Button Grid.Row="1" Content="Guardar Cliente" Width="150" Height="30"
                HorizontalAlignment="Center" Margin="0,10,0,0" Click="Guardar_Click"/>
    </Grid>
</Window>
